<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="p-4"> <!-- Added border and padding classes -->
        <div class="card">
          <div class="card-body">
            <h2 class="card-title text-center">Log in</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'signin-form' }) do |f| %>
              <div class="form-group">
                <%= f.input :email, label: "Email", required: false, autofocus: true, input_html: { class: 'form-control', autocomplete: "email" } %>
              </div>

              <div class="form-group">
                <%= f.input :password, label: "Password", required: false, input_html: { class: 'form-control', autocomplete: "current-password" } %>
              </div>

              <div class="form-group">
                <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
