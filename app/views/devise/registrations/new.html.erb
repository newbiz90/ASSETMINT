<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="p-4"> <!-- Added border and padding classes -->
        <div class="card">
          <div class="card-body">
            <h2 class="card-title text-center">Sign up</h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'signup-form' }) do |f| %>
              <%= f.error_notification %>

              <div class="form-group">
                <%= f.input :email, label: "Email", required: true, autofocus: true, input_html: { class: 'form-control', autocomplete: "email" } %>
              </div>

              <div class="form-group">
                <%= f.input :password, label: "Password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'form-control', autocomplete: "new-password" } %>
              </div>

              <div class="form-group">
                <%= f.input :password_confirmation, label: "Confirm Password", required: true, input_html: { class: 'form-control', autocomplete: "new-password" } %>
              </div>

              <div class="form-group">
                <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-block' %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
